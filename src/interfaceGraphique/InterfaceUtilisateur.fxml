<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="interfaceGraphique.InterfaceUtilisateurController">
   <children>
      <HBox alignment="CENTER_RIGHT" onMouseDragged="#dragged" onMousePressed="#pressed" prefHeight="20.0" prefWidth="800.0" style="-fx-background-color: #e2e2e2;">
         <children>
            <Label prefHeight="20.0" prefWidth="224.0" text="HolyGL - Logiciel de gestion de congés">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets right="625.0" />
               </HBox.margin>
            </Label>
            <FontAwesomeIcon fill="#37bfeb" glyphName="MINUS" onMouseClicked="#min" size="1.5em">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </FontAwesomeIcon>
            <FontAwesomeIcon fill="#083669" glyphName="CLOSE" onMouseClicked="#close" size="1.5em">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </FontAwesomeIcon>
         </children>
      </HBox>
      <AnchorPane prefHeight="580.0" prefWidth="900.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="580.0" prefWidth="400.0">
               <children>
                  <Label text="Bonjour, Mr X, il vous avez :">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="150.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="n jours de congés disponibles">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#addConges" prefHeight="30.0" prefWidth="200.0" text="Prendre des congès">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            <HBox layoutX="650.0" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #47C5FF; -fx-background-radius: 0 0 0 20;">
               <children>
                  <Button mnemonicParsing="false" prefHeight="20.0" prefWidth="100.0" text="Paramètres">
                     <HBox.margin>
                        <Insets left="25.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="20.0" prefWidth="100.0" text="Déconnexion">
                     <HBox.margin>
                        <Insets left="15.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <AnchorPane layoutX="650.0" layoutY="80.0" prefHeight="500.0" prefWidth="250.0" style="-fx-background-color: #0070B0;">
               <children>
                  <Label alignment="CENTER" layoutX="15.0" layoutY="14.0" text="Demandes de congés" textFill="#eeeeee">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Label>
                  <ScrollPane hbarPolicy="NEVER" layoutX="25.0" layoutY="75.0" prefHeight="400.0" prefWidth="200.0" style="-fx-background-color: #47D5FF;">
                     <content>
                        <VBox fx:id="demande" alignment="TOP_CENTER" prefHeight="398.0" prefWidth="200.0" style="-fx-background-color: #47D5FF;" />
                     </content>
                  </ScrollPane>
               </children>
            </AnchorPane>
            <AnchorPane layoutX="400.0" layoutY="80.0" prefHeight="500.0" prefWidth="250.0" style="-fx-background-color: #0088B0; -fx-background-radius: 20 0 0 0;">
               <children>
                  <Label alignment="CENTER" contentDisplay="TOP" layoutX="25.0" layoutY="14.0" prefHeight="20.0" prefWidth="200.0" text="Congés à venir" textFill="#eeeeee">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Label>
                  <ScrollPane hbarPolicy="NEVER" layoutX="25.0" layoutY="75.0" prefHeight="400.0" prefWidth="200.0" style="-fx-background-color: #47D5FF;">
                     <content>
                        <VBox fx:id="accepte" alignment="TOP_CENTER" prefHeight="398.0" prefWidth="200.0" style="-fx-background-color: #47D5FF;">
                           <children>
                              <VBox alignment="TOP_CENTER" maxWidth="180.0" prefHeight="100.0" prefWidth="180.0" style="-fx-background-color: #2080FF;">
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                                 <children>
                                    <HBox alignment="CENTER_RIGHT" maxHeight="30.0" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #0000FF;">
                                       <children>
                                          <Label prefWidth="130.0" text="Vacance de Noël">
                                             <HBox.margin>
                                                <Insets right="5.0" />
                                             </HBox.margin>
                                             <font>
                                                <Font name="System Bold" size="16.0" />
                                             </font>
                                          </Label>
                                          <FontAwesomeIcon glyphName="COG" size="1.4em">
                                             <HBox.margin>
                                                <Insets right="5.0" />
                                             </HBox.margin>
                                          </FontAwesomeIcon>
                                          <FontAwesomeIcon glyphName="CLOSE" size="1.4em">
                                             <HBox.margin>
                                                <Insets right="5.0" />
                                             </HBox.margin>
                                          </FontAwesomeIcon>
                                       </children>
                                    </HBox>
                                    <Label text="Debut : 20/12/2021">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                       <VBox.margin>
                                          <Insets top="10.0" />
                                       </VBox.margin>
                                    </Label>
                                    <Label text="Fin : 24/12/2021">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                       <VBox.margin>
                                          <Insets top="5.0" />
                                       </VBox.margin>
                                    </Label>
                                 </children>
                              </VBox>
                           </children></VBox>
                     </content>
                  </ScrollPane>
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
</VBox>
