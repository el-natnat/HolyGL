<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="interfaceGraphique.InterfaceRHController">
   <children>
      <HBox alignment="CENTER_RIGHT" onMouseDragged="#dragged" onMousePressed="#pressed" prefHeight="20.0" prefWidth="900.0" style="-fx-background-color: #e2e2e2;">
         <children>
            <Label prefHeight="20.0" prefWidth="224.0" text="HolyGL - Logiciel de gestion de congés">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets right="625.0" />
               </HBox.margin>
            </Label>
            <FontAwesomeIcon fill="#37bfeb" glyphName="MINUS" onMouseClicked="#min" size="1.5em">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </FontAwesomeIcon>
            <FontAwesomeIcon fill="#083669" glyphName="CLOSE" onMouseClicked="#close" size="1.5em">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </FontAwesomeIcon>
         </children>
      </HBox>
      <TabPane layoutY="20.0" prefHeight="580.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Demande de congés">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="317.0" prefWidth="440.0">
                     <children>
                        <TableView fx:id="tableCongé" layoutX="15.0" layoutY="15.0" prefHeight="520.0" prefWidth="520.0">
                          <columns>
                            <TableColumn fx:id="nom" editable="false" prefWidth="200.0" text="Salarié" />
                            <TableColumn fx:id="dateD" editable="false" prefWidth="155.0" text="Date de début" />
                             <TableColumn fx:id="dateF" editable="false" prefWidth="155.0" text="Date de fin" />
                          </columns>
                        </TableView>
                        <VBox fx:id="box" layoutX="570.0" layoutY="50.0" prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: #dddddd;" />
                        <Button fx:id="button_valider" layoutX="595.0" layoutY="465.0" mnemonicParsing="false" onAction="#valider" prefHeight="50.0" prefWidth="100.0" text="Valider le&#10;congés" textAlignment="CENTER" />
                        <Button fx:id="button_refuser" layoutX="745.0" layoutY="465.0" mnemonicParsing="false" onAction="#refuser" prefHeight="50.0" prefWidth="100.0" text="Refuser le&#10;congés" textAlignment="CENTER" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Utilisateur">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="add_employé" layoutX="50.0" layoutY="475.0" onAction="#add_employé" mnemonicParsing="false" prefHeight="30.0" prefWidth="400.0" text="Ajouter un nouvel employé" />
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
